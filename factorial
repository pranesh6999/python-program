#factorial

import math
n=int (input("enter the number :"))
result=math.factorial(n)
print("factorial of",n,"is",result)

#recrusive function
def fact(n):
    if n==0:
        return 1
    else:
        return n*fact(n-1)

n=int(input("enter the number :"))
result=fact(n)
print("fact of",n,"is",result)
