#floyd triangle
n=4
p=1
for i in range(n):

    for j in range(i+1):
        print(p,end='')
        p+=1
    print('')

#floyd triangle
n=4
p=1
for i in range(n):

    for j in range(i+1):
        print("  ",end='')
    for j in range(i,n):
        print(p,end='')
        p+=1
    print('')

